

    <section>
      <div class="container mt-5">
        <div class="row justify-content-center">
          {{#each products}}
            <div class="col p-2">
            
              <div class="card" style="width: 18rem;">
                <img
                  class="card-img-top"
                  src="{{this.image}}"
                  alt="Card image cap"
                />
                <div class="card-body">
                  <h5 class="card-title">{{this.name}}</h5>
                  
                  <p class="card-text">{{this.description}}</p>
                  <h5 class="card-title">{{this.price}}</h5>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </section>

    
  </body>
</html>